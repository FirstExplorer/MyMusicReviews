<%= render 'shared/page_title', title: 'All Reviews' %> 

<% @reviews.each do |review| %>
  <div class="row">
    
    <div class="col-md-2">
      <section class="user_info center">
        <%= gravatar_for review.user, size: 100 %>
        <h5> User name: <%= review.user.username %></h5>
      </section>
    </div>
    
    <div class="col-lg-8 well">
      <h4><b><%= review.name %></b></h4>
      <p><b><%= link_to review.title, review_path(review) %></b></p>
      <p><%= review.description %></p>
      <p>
        <span class='quiet'><small> <%= time_ago_in_words(review.created_at) %> ago</small></span>
        
      </p>
      
    </div>
  </div>
  </hr>
<% end %> 