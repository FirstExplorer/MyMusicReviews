<%= render 'shared/errors', obj: @review %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @review do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.label :description %>
      <%= f.text_area :description, rows: 10 %>
      
      <%= f.submit(@review.new_record? ? 'Create Review' : 'Edit Review', class: "btn btn-success") %>
    <% end %>
  </div>
</div>